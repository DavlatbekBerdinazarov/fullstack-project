<div class="container">
  <h2 class="mt-5">Add New Product</h2>
  <form action="/addproduct" method="post">
    <div class="mb-3">
      <label for="image" class="form-label">Choose Image</label>
      <input
        type="text"
        name="imageUrl"
        class="form-control"
        id="image"
        required
      />
    </div>
    <div class="form-group">
      <label for="title">Title:</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      />
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
        rows="3"
        required
      ></textarea>
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
